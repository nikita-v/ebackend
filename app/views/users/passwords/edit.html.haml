%legend= t('.change_password')
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :patch }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  = f.password_field :password, :autofocus => true, :class => 'span4', :placeholder => User.human_attribute_name(:password)
  = f.password_field :password_confirmation, :class => 'span4', :placeholder => User.human_attribute_name(:password_confirmation)
  = f.submit t('.change_password'), :class => 'btn btn-info btn-block'
