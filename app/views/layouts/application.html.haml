!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= t('header.menu.brand')
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    /[if lt IE 9]
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  %body
    .container.wrap
      .navbar.navbar-static-top
        .navbar-inner
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to t('header.menu.brand'), root_path, :class => 'brand'
          .nav-collapse.collapse
            %ul.nav
              %li
                = link_to t('header.menu.quoters'), quoters_path
              %li
                = link_to t('header.menu.quotes'), quotes_path
            %ul.nav.pull-right
              - unless user_signed_in?
                %li
                  = link_to new_user_session_path do
                    = t('header.menu.user.sign_in')
              - else
                %li.dropdown
                  %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
                    = current_user.email
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to edit_user_registration_path do
                        %i.icon-wrench
                        &nbsp;
                        = t('header.menu.user.change_password')
                    %li.divider
                    %li
                      = link_to destroy_user_session_path, :method => :delete do
                        %i.icon-off
                        &nbsp;
                        = t('header.menu.user.sign_out')
      .content
        = yield
      #flash.hidden
        #notice= notice
        #alert= alert
      .push
    %footer.container
      .pull-left
        %p.muted.credit
          %a{:href => "https://play.google.com/store/apps/details?id=ru.nikitav.android.bash"} EbashIm
      .pull-right.hidden-phone
        %p.muted.credit
          = "#{t('footer.author')} Â© #{Time.now.year}"
